<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.w.backend.domain.user.mapper.UserMapper">

    <resultMap id="userResultMap" type="com.w.backend.domain.user.entity.User">
        <constructor>
            <idArg column="id" javaType="java.lang.Long"/>
            <arg column="username" javaType="java.lang.String"/>
            <arg column="password" javaType="java.lang.String"/>
            <arg column="role" javaType="java.lang.String"/>
        </constructor>
    </resultMap>

    <insert id="save" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO users (username, password, role)
        VALUES (#{username}, #{password}, #{role})
    </insert>

    <select id="findByUsername" resultMap="userResultMap">
        SELECT id, username, password, role
        FROM users
        WHERE username = #{username}
    </select>

</mapper>
